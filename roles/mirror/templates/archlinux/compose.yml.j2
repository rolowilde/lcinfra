name: mirror-archlinux

services:
  caddy:
    image: caddy:2.9.1
    hostname: archlinux.mirror
    volumes:
      - {{ mirror_root }}/archlinux:/mirror:z,ro
      - ../Caddyfile:/etc/caddy/Caddyfile:z,ro
    environment:
      - TZ={{ lcinfra_timezone }}
    healthcheck:
      test: ["CMD-SHELL", "wget -nv -t1 --spider -O /dev/null http://localhost/ || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 10s
    restart: unless-stopped

  rsync:
    image: ghcr.io/rowlul/lcmirror/archlinux:alpine-3.20.5
    volumes:
      - {{ mirror_root }}/archlinux:/data:z
    environment:
      - TZ={{ lcinfra_timezone }}
      - CRONTAB_SCHEDULE={{ mirror_archlinux.schedule }}
      - SYNCREPO_SOURCE_URL={{ mirror_archlinux.config.source_url }}
      - SYNCREPO_LASTUPDATE_URL={{ mirror_archlinux.config.lastupdate_url }}
    restart: unless-stopped

networks:
  default:
    name: proxynet
    external: true
