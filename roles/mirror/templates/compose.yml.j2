services:
  root:
    build:
      context: .
      dockerfile: ../Dockerfile.nginx
      target: fancyindex
    image: nginx:fancyindex
    hostname: root.mirror
    volumes:
      - {{ mirror_root }}:/mirror:z,ro
    environment:
      - TZ={{ tdctl_tz.stdout }}
    healthcheck:
      test: ["CMD", "curl", "-sSf", "http://localhost/"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 10s
    restart: unless-stopped
{% for mirror in mirror_list %}

  {{ mirror }}:
    build:
      context: .
      dockerfile: ../Dockerfile.nginx
      target: fancyindex-rsync
    image: nginx:fancyindex-rsync
    hostname: {{ mirror }}.mirror
    volumes:
      - {{ mirror_root }}/{{ mirror }}:/mirror:Z
      - ./sync-{{ mirror }}.sh:/sync:Z,ro
    environment:
      - TZ={{ tdctl_tz.stdout }}
    healthcheck:
      test: ["CMD", "curl", "-sSf", "http://localhost/"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 10s
    ulimits:
      nofile:
        soft: 262144
        hard: 262144
    restart: unless-stopped
{% endfor %}

networks:
  default:
    name: mirror_backend_net
    driver: bridge
