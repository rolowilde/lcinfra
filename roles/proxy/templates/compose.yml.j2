services:
  caddy:
    image: caddy:2.9.1
    ports:
      - 80:80
      - 443:443
    volumes:
      - ./conf:/etc/caddy:Z
      - {{ proxy_data }}:/data:Z
    environment:
      - TZ={{ lcinfra_timezone }}
    healthcheck:
      test: ["CMD-SHELL", "wget -nv -t1 --spider http://localhost/ || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 10s
    networks:
      - mirrors
    restart: unless-stopped

networks:
  mirrors:
    name: mirror_backend_net
    external: true
