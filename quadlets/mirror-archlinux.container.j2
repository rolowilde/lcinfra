[Container]
AutoUpdate=registry
ContainerName=mirror-archlinux
HealthCmd=wget -nv -t1 --spider http://localhost/
HealthOnFailure=kill
Image={{ mirror_image }}
LogDriver=journald
Network=services.network
Timezone=local
Volume={{ mirror_archlinux_volume }}:/mirror:z,ro

[Service]
Restart=always

[Install]
WantedBy=default.target
