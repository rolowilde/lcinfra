[Container]
AutoUpdate=registry
ContainerName=mirror
Environment=CADDY_ADMIN=0.0.0.0:2019
HealthCmd=wget -nv -t1 --spider http://localhost/
HealthOnFailure=kill
Image={{ mirror_image }}
LogDriver=journald
Network=services.network
Timezone=local
Volume={{ mirror_root_volume }}:/mirror:z,ro

[Service]
Restart=always

[Install]
WantedBy=default.target
