[Container]
AutoUpdate=registry
ContainerName=proxy
Environment=CADDY_EMAIL="{{ proxy_email }}"
HostName=proxy
Image={{ proxy_web_image }}
LogDriver=journald
Network=proxy.network
Network=metric.network
PublishPort=80:80/tcp
PublishPort=443:443/tcp
PublishPort=443:443/udp
Timezone=local
Volume={{ proxy_data_volume }}:/data:Z

[Service]
Restart=always
TimeoutStartSec=900

[Install]
WantedBy=default.target
