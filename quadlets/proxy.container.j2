[Container]
AutoUpdate=registry
ContainerName=proxy
Environment=CADDY_ADMIN=0.0.0.0:2019
HealthCmd=curl -sSf http://localhost/
HealthOnFailure=kill
Image={{ proxy_image }}
LogDriver=journald
Network=services.network
PublishPort=80:80/tcp
PublishPort=443:443/tcp
PublishPort=443:443/udp
Timezone=local
Volume={{ proxy_data_volume }}:/data:Z

[Service]
Restart=always

[Install]
WantedBy=default.target
